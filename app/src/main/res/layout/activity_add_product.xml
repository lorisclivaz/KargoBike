<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductActivity">

    <TextView
        android:id="@+id/tv_addProduct"
        android:layout_width="307dp"
        android:layout_height="56dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="64dp"
        android:text="Add a product :"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="300dp"
        android:layout_height="358dp"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        android:padding="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_addProduct">

        <EditText
            android:id="@+id/et_info1"
            android:layout_width="290dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:hint="info 1"
            android:inputType="textPersonName"
            android:text="Name" />

        <EditText
            android:id="@+id/et_info2"
            android:layout_width="290dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:hint="info 1"
            android:inputType="textPersonName"
            android:text="Name" />

        <EditText
            android:id="@+id/et_info3"
            android:layout_width="290dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:hint="info 1"
            android:inputType="textPersonName"
            android:text="Name" />

        <EditText
            android:id="@+id/et_info4"
            android:layout_width="290dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:hint="info 1"
            android:inputType="textPersonName"
            android:text="Name" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>